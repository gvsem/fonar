    <div class="box">

      <div class="content">

        <form id="login-form" novalidate="novalidate">

          <div class="field" id="email-field">
            <label class="label"></label>
            <div class="control has-icons-left has-icons-right">
              <input class="input" type="email" placeholder="Адрес для корреспонденции" data-validation="email"
                     name="email" required>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
          </div>

          <div class="field">
            <p class="control has-icons-left">
              <input class="input" name="password" type="password" placeholder="Парольный автограф"
                     required>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>

          <div class="field is-grouped">
            <div class="control">
              <button class="button is-link" type="submit" value="submit">Войти</button>
            </div>
          </div>

        </form>
      </div>
    </div>
